{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es2015", "es2017", "dom"],
    "module": "esNext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@reach/dialog": ["./typings/modules/@reach/dialog"]
    },
    "target": "esnext"
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["./node_modules", "./dist", "./service-worker"]
}
